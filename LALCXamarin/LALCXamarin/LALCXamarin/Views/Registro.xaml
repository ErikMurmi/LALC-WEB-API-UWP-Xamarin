<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LALCXamarin.Views.Registro">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Registro" HorizontalTextAlignment="Center"/>
            <Label Text="Nombre"></Label>
            <Entry x:Name="campoNombreR" ></Entry>
            <Label x:Name="msNombreR"></Label>
            <Label Text="Email"></Label>
            <Entry x:Name="campoEmailR" ></Entry>
            <Label x:Name="msEmailR"></Label>
            <Label Text="Contraseña"></Label>
            <Entry x:Name="campoContraseñaR" IsPassword="True" ></Entry>
            <Label x:Name="msContraseñaR"></Label>
            <Button VerticalOptions="Center" Text="Login" Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>