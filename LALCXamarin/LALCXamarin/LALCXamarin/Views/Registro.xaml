<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Shell.NavBarIsVisible="False"
             Shell.FlyoutBehavior="Disabled"
             x:Class="LALCXamarin.Views.Registro">
    <ContentPage.Content>
        <StackLayout Padding="10,0,10,0" VerticalOptions="Center">
            <Label Text="Registro" Margin="0,25,0,25" HorizontalTextAlignment="Center" FontSize="Title"/>
            <Label Text="Nombre" Margin="0,5,0,10"></Label>
            <Entry x:Name="campoNombreR" ></Entry>
            <Label x:Name="msNombreR"></Label>
            <Label Text="Email" Margin="0,10,0,10"></Label>
            <Entry x:Name="campoEmailR" ></Entry>
            <Label x:Name="msEmailR"></Label>
            <Label Text="Contraseña" Margin="0,10,0,10"></Label>
            <Entry x:Name="campoContraseñaR" IsPassword="True" ></Entry>
            <Label x:Name="msContraseñaR"></Label>
            <Button VerticalOptions="Center" Text="Registro" Clicked="Button_ClickedR"/>
            <Label x:Name="msRegistro"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>