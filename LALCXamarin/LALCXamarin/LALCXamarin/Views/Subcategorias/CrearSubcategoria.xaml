<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LALCXamarin.Views.Subcategorias.CrearSubcategoria"
             Title="{Binding Title}">
    <ContentPage.Content>
        <StackLayout Margin="20,0,20,0">
            <Label Text="Nombre" FontSize="20"/>
            <Editor x:Name="Nombre" Text="" AutoSize="TextChanges"/>
            <Label Text="Descripcion" FontSize="20"/>
            <Editor x:Name="Descripcion" Text="" AutoSize="TextChanges"/>
            <Label Text="Color" FontSize="20"/>
            <Button Text="Crear" FontSize="20" FontAttributes="Bold" BackgroundColor="CadetBlue" Clicked="CrearNuevaCategoria"/>
            <Button Text="Cancelar" FontSize="20" FontAttributes="Bold" BackgroundColor="PaleVioletRed" Clicked="CancelarCrear"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>