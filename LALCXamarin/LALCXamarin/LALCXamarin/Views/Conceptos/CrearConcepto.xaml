<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LALCXamarin.ViewModels.Conceptos.CrearConcepto">
    <ContentPage.Content>
        <StackLayout Margin="20,0,20,0" >
            <Label Text="Título" FontSize="20"/>
            <Editor x:Name="Titulo" Text="" AutoSize="TextChanges"/>
            <Label Text="Definición" FontSize="20"/>
            <Editor x:Name="Definicion" Text="" AutoSize="TextChanges"/>
            <Label Text="Color" FontSize="20"/>
            <Button Text="Crear" FontSize="20" FontAttributes="Bold" BackgroundColor="CadetBlue" Clicked="CrearNuevoConcepto"/>
            <Button Text="Cancelar" FontSize="20" FontAttributes="Bold" BackgroundColor="PaleVioletRed" Clicked="CancelarCrear"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>