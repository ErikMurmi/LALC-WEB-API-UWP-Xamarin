<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LALCXamarin.ViewModels.Conceptos.CrearConcepto"
             Title="Crear Concepto">
    <ContentPage.Content>
        <StackLayout Margin="20,20,20,0" >
            <Label Text="Título" FontSize="20"/>
            <Editor x:Name="Titulo" Text="" AutoSize="TextChanges"/>
            <Label Text="Definición" FontSize="20"/>
            <Editor x:Name="Definicion" Text="" AutoSize="TextChanges"/>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Button Text="Crear" FontSize="20" FontAttributes="Bold" Margin="0,20,10,10" WidthRequest="120"
                    BackgroundColor="CadetBlue" Clicked="CrearNuevoConcepto" />
                <Button Text="Cancelar" FontSize="20" FontAttributes="Bold" WidthRequest="130" Margin="0,20,0,10"
                        BackgroundColor="PaleVioletRed" Clicked="CancelarCrear"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>